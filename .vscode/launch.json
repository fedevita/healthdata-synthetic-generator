{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run generator (module)",
      "type": "python",
      "request": "launch",
      "module": "healthdata_synthetic_generator",
      "args": [
        "--out-dir",
        "${input:outDir}",
        "--format",
        "${input:format}",
        "--scale",
        "${input:scale}",
        "--seed",
        "${input:seed}"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Pytest",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["-q"],
      "console": "integratedTerminal"
    }
  ],
  "inputs": [
    {
      "id": "outDir",
      "type": "promptString",
      "description": "Output directory",
      "default": "out"
    },
    {
      "id": "format",
      "type": "promptString",
      "description": "Export format (csv or parquet)",
      "default": "csv"
    },
    {
      "id": "scale",
      "type": "promptString",
      "description": "Sampling scale factor",
      "default": "2.0"
    },
    {
      "id": "seed",
      "type": "promptString",
      "description": "Random seed",
      "default": "42"
    }
  ]
}
